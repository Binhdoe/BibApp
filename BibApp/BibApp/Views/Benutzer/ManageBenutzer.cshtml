@model ManageBenutzerModel
@await Component.InvokeAsync("NToastNotify.Toastr")

@{
    ViewData["Title"] = "Mein Benutzerkonto";
}

<h2>Mein Benutzerkonto</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Benutzername"></label>
                <input asp-for="Benutzername" class="form-control" />
                <span asp-validation-for="Benutzername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Speichern</button>
        </form>
    </div>
</div>

<br />

<a asp-action="ChangePassword" asp-controller="Benutzer">Passwort ändern</a>