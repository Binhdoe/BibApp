@using BibApp.Models.Benutzer;
@await Component.InvokeAsync("NToastNotify.Toastr")

@model LoginViewModel
@inject SignInManager<Benutzer> SignInManager

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <h1 class="text-center" style="padding-top:15px;">Login</h1>
    <hr />
</div>

<form class="form-horizontal" method="post" asp-action="Login">
    <div class="form-group">
        <label class="control-label col-sm-5" asp-for="Benutzername"></label>
        <div class="col-sm-4">
            <input asp-for="Benutzername" class="form-control" placeholder="Benutzername eingeben">
            <span asp-validation-for="Benutzername" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-5" asp-for="Passwort"></label>
        <div class="col-sm-4">
            <input asp-for="Passwort" class="form-control" placeholder="Passwort eingeben">
            <span asp-validation-for="Passwort" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-10">
            <button type="submit" class="btn btn-success">Einloggen</button>
            <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Register", "Benutzer")'">Registrieren</button>
        </div>
    </div>
</form>