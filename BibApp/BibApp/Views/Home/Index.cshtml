@model BibApp.Models.HomeIndexData
@await Component.InvokeAsync("NToastNotify.Toastr")

@* ADMIN *@

<h2>Leihaufträge</h2>

<form asp-action="Index" method="get" class="form-search form-inline">
    <div class="form-actions no-color">
        <div style="padding:0px;">
                <div class="input-group">
                    <input type="text" class="form-control search-query" name="SearchString" value="@ViewData["currentFilter"]" placeholder="Search..." /> <span class="input-group-btn">
                        <button type="submit" class="btn btn-primary"> Search</button>
                    </span>
                </div>
        </div>
    </div>
</form>
<br />

<div class="row">
    <div class="col-sm-12">
        <table class="table table-hover" style="border: 1px solid #808080">
            <thead>
                <tr>
                    <th class="col-xs-2">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.AdminKorb.Benutzer)</a>
                    </th>
                    <th class="col-xs-2">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["BuchSortParm"]">@Html.DisplayNameFor(model => model.AdminKorb.BuchTitel)</a>
                    </th>
                    <th class="col-xs-2">
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["ISBNSortParm"]">@Html.DisplayNameFor(model => model.AdminKorb.ISBN)</a>
                    </th>
                </tr>
            </thead>
       
            <tbody>
                    @foreach (var item in Model.AdminKoerbe)
                   {
                        <tr>
                            <td class="col-xs-2">
                                @Html.DisplayFor(modelItem => item.Benutzer)
                            </td>
                            <td class="col-xs-2">
                                @Html.DisplayFor(modelItem => item.BuchTitel)
                            </td>
                            <td class="col-xs-2">
                                @Html.DisplayFor(modelItem => item.ISBN)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</div>

<h2>Abgelaufenes Leihfristende</h2>

<form asp-action="Index" method="get" class="form-search form-inline">
    <div class="form-actions no-color">
        <div style="padding:0px;">
            <div class="input-group">
                <input type="text" class="form-control search-query" name="SearchString2" value="@ViewData["currentFilter2"]" placeholder="Search..." /> <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary"> Search</button>
                </span>
            </div>
        </div>
    </div>
</form>
<br />

<div class="row">
    <div class="col-sm-12">
        <table class="table" style="border: 1px solid #808080">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm2"]">@Html.DisplayNameFor(model => model.AdminKorb.Benutzer)</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm2"]">@Html.DisplayNameFor(model => model.Buch.ISBN)</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm2"]">@Html.DisplayNameFor(model => model.Buch.Titel)</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["RoleSortParm2"]">Abgelaufen am</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Dictionary)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Key.Benutzer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Key.ISBN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Key.BuchTitel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Value.EntliehenBis)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>