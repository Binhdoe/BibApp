@model BibApp.Models.HomeIndexData

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-sm-12">
        <h3>Meine Bücher</h3>
    </div>
</div>

<div class="row">
    <div class="col-sm-9">
        <table class="table" style="border: 1px solid #808080">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Buch.Titel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Buch.Autor)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Buch.IstVorgemerkt)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Buch.Verlag)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Buch.EntliehenVom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Buch.EntliehenBis)
                    </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Buecher)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Titel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Autor)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.IstVorgemerkt)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Verlag)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.EntliehenVom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntliehenBis)
                        </td>*@
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-3">
        <p>TEST</p>
        <button type="button" class="btn">Benachrichtigen</button>
        <button type="button" class="btn btn-default">Benachrichtigen</button>
        <button type="button" class="btn btn-primary">Benachrichtigen</button>
        <button type="button" class="btn btn-success">Benachrichtigen</button>
        <button type="button" class="btn btn-info">Benachrichtigen</button>
        <button type="button" class="btn btn-warning">Benachrichtigen</button>
        <button type="button" class="btn btn-danger">Benachrichtigen</button>
        <button type="button" class="btn btn-link">Benachrichtigen</button>
     </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <h3>Platzhalter</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-6">
        <table class="table" style="border: 1px solid #808080">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Benutzer.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Benutzer.Role)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Benutzers)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-6">
        <button type="button" class="btn">Benachrichtigen</button>
        <button type="button" class="btn btn-default">Benachrichtigen</button>
        <button type="button" class="btn btn-primary">Benachrichtigen</button>
        <button type="button" class="btn btn-success">Benachrichtigen</button>
        <button type="button" class="btn btn-info">Benachrichtigen</button>
        <button type="button" class="btn btn-warning">Benachrichtigen</button>
        <button type="button" class="btn btn-danger">Benachrichtigen</button>
        <button type="button" class="btn btn-link">Benachrichtigen</button>

    </div>
</div>